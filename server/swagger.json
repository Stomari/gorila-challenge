{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Gorila Test",
    "description": "API developed for Gorila Fullstack test"
  },
  "servers": [
    {
      "description": "Gorila API",
      "url": "https://gorila-test.herokuapp.com"
    }
  ],
  "tags": [
    {
      "name": "investiments"
    }
  ],
  "paths": {
    "/api/investiments": {
      "get": {
        "tags": [
          "investiments"
        ],
        "summary": "Returns all Investiments",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "investiments"
        ],
        "summary": "Post a new investiment",
        "description": "Create a new investiment, requires to send type, value and date",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Investiment"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully created a new investiment"
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/investiments/{investiment_id}": {
      "delete": {
        "tags": [
          "investiments"
        ],
        "summary": "Deletes an investiment",
        "parameters": [
          {
            "name": "investiment_id",
            "in": "path",
            "description": "Investiment ID that you want to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted an investiment"
          },
          "400": {
            "description": "Invalid ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Investiment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "fixa",
              "variavel"
            ]
          },
          "value": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      }
    }
  }
}